#!/usr/bin/perl

use strict;
use warnings;

use Net::Songkick;

my $user = shift || 'davorg';
my $sk = Net::Songkick->new({
  api_key => $ENV{SONGKICK_API_KEY}
});

my $evnts = $sk->get_upcoming_events({
  user => $user,
});

foreach (@$evnts) {
  print $_->start->strftime('%A %d %B %Y'), "\n";
  print ' ', $_->performances->[0]->artist->displayName, "\n";
  print ' at ', $_->venue->displayName, "\n";
}
